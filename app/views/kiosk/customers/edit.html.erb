<% content_for :header_options do %>
	<%= link_to 'Back to Customers', customers_path, class: 'btn btn-default primary-btn' %>
	<%= link_to 'Delete Customer', customer_path(@customer), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-default' %>
<% end %>

<h3 class="page-title">Update Customer</h3>

<%= form_for @customer do |t| %>
	<%= render partial: 'form', locals: {t: t} %>
<%= submit_tag 'Update Customer', class: 'btn btn-default form-submit-button customer-form-submit-button' %>
<% end %>