<% content_for :header_options do %>
	<%= link_to 'Back to Customers', customers_path, class: 'btn btn-default btn-primary' %>
<% end %>

<h3 class="page-title">Create A New Customer</h3>

<%= form_for @customer do |t| %>
	<%= render partial: 'form', locals: {t: t} %>
<%= submit_tag 'Create New Customer', class: 'btn btn-default form-submit-button customer-form-submit-button' %>
<% end %>