<div class="form-section">
	<h5 class="form-section-name">Product Category Information</h5>

	<div class="form-row">
		<div class="form-col form-col-half">
			<%= t.label :name, class: 'form-label' %> <br>
			<%= t.text_field :name, class: 'form-input form-text-input' %>
		</div>
		<div class="form-col form-col-half">
			<%= t.label :permalink, class: 'form-label' %> <br>
			<%= t.text_field :permalink, class: 'form-input form-text-input' %>
		</div>
		<div class="clear-left"></div>
	</div>

	<div class="form-row">
		<div class="form-col-whole">
			<%= t.label :description %> <br>
			<%= t.text_area :description, class: 'form-input form-text-area' %>
		</div>
	</div>
	
</div>