

<div class="form-section">
<h5 class="form-section-name">Product Info</h5>
	<div class="form-row">
		<div class="form-col form-col-half">
			<%= t.label :name, class: 'form-label' %> <br>
			<%= t.text_field :name, class: 'form-text-input form-input' %>
		</div>
		<div class="form-col form-col-half">
			<%= t.label :permalink, class: 'form-label' %> <br>
			<%= t.text_field :permalink, class: 'form-input form-text-input' %>
		</div>
	</div>

	<div class="form-row">
		<div class="form-col form-col-third">
			<%= t.label :price, class: 'form-label' %> <br>
			<%= t.text_field :price, class: 'form-text-input form-input' %>
		</div>
		<div class="form-col form-col-third">
			<%= t.label :stock, class: 'form-label' %> <br>
			<%= t.text_field :stock, class: 'form-text-input form-input' %>
		</div>
		<div class="form-col form-col-third">
			<%= t.label :kiosk_product_category_id, "Product Category", class: 'form-label' %> <br>
			<%= t.select :product_category_id, Kiosk::ProductCategory.all.collect {|s| [s.name, s.id] }, include_blank: true, class: 'form-select form-input' %>
		</div>
		<div class="clear-left"></div>
	</div>

	<div class="form-row">
		<div class="form-col-whole">
			<%= t.label :short_description %> <br>
			<%= t.text_area :short_description, class: 'form-input form-text-area' %>
		</div>
	</div>

	<div class="form-row">
		<div class="form-col-whole">
			<%= t.label :description %> <br>
			<%= t.text_area :description, class: 'form-input form-text-area' %>
		</div>
	</div>
</div>

<div class="form-section">
	<h5 class="form-section-name">Images</h5>
	<div class="form-images-container">
		<% if !@product.images.empty? %>
			<% @product.images.each do |image| %>
				<%= image_tag image.thumbnail, class: 'form-image' %>
			<% end %>
			<div class="clear-left"></div>
		<% end %>
	</div>
	<div class="form-row">
		<%= t.file_field :image, class: 'image-input' %>
	</div>
</div>